{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": false
    // "strictFunctionTypes": true,
    // "strictNullChecks": true
  }
}
